{
  "name": "Python",
  "image": "mcr.microsoft.com/devcontainers/python:latest",
  "customizations": {
    "vscode": {
      "extensions": [
        "ms-python.python",
        "ms-python.isort",
        "ms-python.black-formatter"
      ],
    }
  },
  "postCreateCommand": "sudo apt update && sudo apt install ffmpeg -y && pipenv install --system",
  // "workspaceMount": "", //selinux
  "runArgs": [
    "--userns=keep-id", //may be needed for docker / rootful podman
    // "--volume=${localWorkspaceFolder}:/workspaces/${localWorkspaceFolderBasename}:z" //selinux
  ],
  "containerUser": "vscode",
}
